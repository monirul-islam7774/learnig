<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/front_page_layout"
    android:background="@drawable/bg"
    >

    <!--<TextView
        android:id="@+id/title_app"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="@string/app_name"
        android:textColor="#c2c2c2"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="#7a484848"
        android:gravity="center"
        />-->

    <Button
        android:id="@+id/simple_questions"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_effect"
        android:text="@string/simple"
        android:textAllCaps="false"
        android:textSize="10sp"
        android:layout_toLeftOf="@id/other_app"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        />

    <Button
        android:id="@+id/tough_questions"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="41dp"
        android:background="@drawable/button_effect"
        android:text="@string/tough"
        android:textAllCaps="false"
        android:textSize="10sp"
        android:layout_alignLeft="@id/simple_questions" />

    <Button
        android:id="@+id/other_app"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_effect"
        android:text="@string/other"
        android:textAllCaps="false"
        android:textSize="10sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp" />

    <Button
        android:id="@+id/rate_app"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignTop="@id/tough_questions"
        android:background="@drawable/button_effect"
        android:text="@string/rate"
        android:textAllCaps="false"
        android:textSize="10sp"
        android:layout_toRightOf="@id/tough_questions"
        android:layout_marginLeft="20dp"
        />

</RelativeLayout>