<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/front_page_layout"
    android:background="@drawable/bg"
    android:padding="30dp"
    >

    <Button
        android:id="@+id/simple_questions"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:background="@drawable/button_effect"
        android:text="Simple Questions"
        android:textAllCaps="false"
        android:textSize="25sp"

        />

    <Button
        android:id="@+id/tough_questions"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_below="@id/simple_questions"
        android:layout_margin="20dp"
        android:background="@drawable/button_effect"
        android:text="Tough Questions"
        android:textAllCaps="false"
        android:textSize="25sp"


        />

    <Button
        android:id="@+id/other_app"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/simple_questions"
        android:layout_marginRight="45dp"
        android:background="@drawable/button_effect"
        android:text="See our other app"
        android:textAllCaps="false"
        android:textSize="25sp" />

    <Button
        android:id="@+id/rate_app"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/tough_questions"
        android:layout_alignLeft="@+id/other_app"
        android:background="@drawable/button_effect"
        android:text="Rate App"
        android:textAllCaps="false"
        android:textSize="25sp" />

</RelativeLayout>